<div class="user_page">
  <header class="user_page-header">
    <div class="user-name">
      <a href="">
          <h2><%= @user.nickname %></h2>
      </a>
    </div>
  </header>
    <div id="section-contents-inner-video">
      <div class="section-contents-inner-video-inner">
          <ul class="user_page-contents">
          <% @comments.each do |comment| %>
            <li>
            <%= render partial: 'web/videos/partials/video_player', locals: {
                  video_url: comment.video.file_url,
                  thumb_url: comment.video.thumb_url
                }%>
                <%= render partial: 'web/videos/partials/like', locals: {video: comment.video} %>
              <div class="meta">
                  <div class="meta-title"><%= comment.video.title %></div>
                <div class="user_review"><%= comment.content %></div>
              </div>
            </li>
            <% end %>
           </ul>
      </div>
    </div>
</div>
